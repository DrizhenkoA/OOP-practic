#include <iostream>

using namespace std;




class Road {
public:
	enum Speed {
		LOW = 40,
		MEDIUM = 60,
		HIGH = 90,
	};

private:
	string name;
	Speed limit;

public:
	Road(string name,Speed limit) {
		this->name = name;
		this->limit = limit;
	}

	Speed getLimit() {
		return limit;
	}
};

